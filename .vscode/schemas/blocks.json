{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "title": "Blocks",
  "items": {
    "type": "object",
    "title": "Block",
    "additionalProperties": false,
    "required": ["id", "states"],
    "properties": {
      "id": { "title": "ID", "type": "string", "pattern": "^minecraft:[a-zA-Z0-9_]*$" },
      "states": {
        "title": "States",
        "type": "array",
        "items": {
          "type": "object",
          "title": "State",
          "additionalProperties": false,
          "required": ["name", "values"],
          "properties": {
            "name": { "type": "string", "title": "Name" },
            "values": {
              "type": "array",
              "title": "Values",
              "items": {
                "type": "string",
                "title": "State Value"
              }
            }
          }
        }
      }
    }
  }
}
